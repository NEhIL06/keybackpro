{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "server/index.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
      },
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/index.html" }
    ],
    "functions": {
      "server/index.js": {
        "maxDuration": 10
      }
    }
  }